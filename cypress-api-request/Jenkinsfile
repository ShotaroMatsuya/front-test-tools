pipeline{
  agent {
    docker {
      image 'cypress/base:16.13.0'
      args '-u root:root --net=host -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {
    stage('Download the dependencies') {
      steps {
        sh "npm install"
      }
    }

    stage('Build and test') {
      steps {
        sh "npm run build:and:test"
      }
    }
  }

}